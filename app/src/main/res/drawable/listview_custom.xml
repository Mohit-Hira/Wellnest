<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Main Blue Background Layer -->
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="#598C64"/>
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp"/>
            <corners
                android:topRightRadius="50dp"
                android:topLeftRadius="50dp"/>
        </shape>
    </item>

    <!-- Left Black Border Layer -->
    <item
        android:top="20dp"
        android:left="5dp"
        android:right="5dp">
        <shape
            android:shape="rectangle">
            <solid android:color="#F0C997"/>
            <!--            <stroke-->
            <!--                android:width="3dp"-->
            <!--                android:color="@color/dark_blue"/>-->
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp"/>
            <corners
                android:topRightRadius="50dp"
                android:topLeftRadius="50dp"/>
        </shape>
    </item>
</layer-list>

