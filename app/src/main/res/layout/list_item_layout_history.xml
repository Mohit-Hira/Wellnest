<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center|top"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="6dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_gravity="center|top"
        android:background="@drawable/cupon_box"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_anchorGravity="center|start">

        <TextView
            android:id="@+id/activity_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_weight="1"
            android:gravity="center|start"
            android:text="Candy Crush Played"
            android:textAlignment="gravity"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/activity_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center|start|left"
            android:text="on 1/1/2023"
            android:textAlignment="gravity"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/activity_hrs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center|start"
            android:text="at 12:01"
            android:textAlignment="gravity"
            android:textColor="@color/white"
            android:textSize="10sp" />

    </LinearLayout>
</LinearLayout>