<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    android:orientation="vertical"
    tools:context="com.example.wellnest.activities.HistoryActivity">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:orientation="vertical"
        app:layout_anchorGravity="center"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <Button
            android:id="@+id/back_btn"
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:layout_gravity="center|start"
            android:layout_marginStart="30dp"
            android:background="@color/transparent"
            android:foreground="@drawable/back_arrow"
            android:foregroundTint="@color/white" />

        <LinearLayout
            android:id="@+id/tut_his"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/listview_custom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewredeem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="Activity"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <ListView
                android:id="@+id/gamesListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10"

                android:divider="@android:color/transparent"
                android:padding="20dp"
                android:scrollbarSize="0dp" />

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>